<div class="container">
  <h1>Welcome <%= @user.username %></h1>

  <h3>Here are your bookings : </h3>
  <ul>
    <% @bookings.each do |booking| %>
      <li>
        <%= booking.scooter.model %>
        <%= booking.start_date %>
        <%= booking.end_date %>
        <%= booking.status %>
        <%= link_to 'Accept', accept_booking_path(booking), method: :patch, data: {confirm: 'Are you sure?'} %>
        <%= link_to 'Decline', decline_booking_path(booking), method: :patch, data: {confirm: 'Are you sure?'} %>
      </li>
    <% end %>
  </ul>
</div>
