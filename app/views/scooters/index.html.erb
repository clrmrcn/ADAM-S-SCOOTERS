
<div class="index_wrap">
  <div class="product-container">
   <% @scooters.each do |scooter|  %>
      <div class="card-product">
       <%= cl_image_tag scooter.photo.key, height: 200, width: 200, crop: :fill %>
        <div class="card-product-infos col-12 col-md-6 col-lg-4 col-xl-4">
        <%= link_to scooter_path(scooter) do %>
          <h2><%= scooter.model %></h2> <small>$<%= scooter.price %> a day</small>
          <% end %>
        </div>
            <div class="link-wrap">
                    <%= link_to 'Edit', edit_scooter_path(scooter), class: 'buy--btn' if scooter.user == current_user %>
                  <%= link_to 'Remove', scooter_path(scooter),
                      method: :delete,
                    data: {confirm: 'Are you sure?'},
                    class: 'buy--btn' if scooter.user == current_user
            %>
                  <%= link_to 'Book this scooter', new_scooter_booking_path(scooter), class: 'buy--btn' unless scooter.user == current_user %>
            </div>
      </div>
    <% end %>

  </div>
  <div class="map-container">
      <div id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
